{
  "name": "polychampions",
  "version": "1.0.0",
  "description": "A website for the pPolyChampions Polytopia League",
  "main": "\u001f\u001f",
  "scripts": {
    "test": "test",
    "build:html": "posthtml -c posthtml.json",
    "watch:html": "onchange \"src/views\" -- npm run build:html",
    "css:lint": "stylelint src/scss/*.scss --syntax scss || true",
    "css:scss": "node-sass --output-style compressed -o dist src/scss",
    "css:autoprefixer": "postcss -u autoprefixer -r dist/*.css",
    "build:css": "npm run css:lint && npm run css:scss && npm run css:autoprefixer",
    "watch:css": "onchange \"src/scss\" -- npm run build:css",
    "build:images": "imagemin src/images/**/* --out-dir=dist/images",
    "watch:images": "onchange \"src/images\" -- npm run build:images",
    "build:js": "webpack --mode=production",
    "watch:js": "onchange \"src/js\" -- webpack --mode=development",
    "serve": "browser-sync start --server \"dist\" --files \"dist\"",
    "watch": "run-p serve watch:*",
    "build": "run-p build:*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LunaMelodi/polychampions.git"
  },
  "keywords": [
    "Polytopia"
  ],
  "author": "Luna",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/LunaMelodi/polychampions/issues"
  },
  "homepage": "https://github.com/LunaMelodi/polychampions#readme",
  "devDependencies": {
    "@babel/preset-env": "^7.11.0",
    "autoprefixer": "^9.8.6",
    "babel-loader": "^8.1.0",
    "browser-sync": "^2.26.12",
    "eslint": "^7.7.0",
    "eslint-loader": "^4.0.2",
    "htmlnano": "^0.2.6",
    "imagemin-cli": "^6.0.0",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.0.2",
    "postcss-cli": "^7.1.1",
    "posthtml": "^0.13.2",
    "posthtml-cli": "^0.7.5",
    "posthtml-modules": "^0.6.2",
    "stylelint": "^13.6.1",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
  }
}
